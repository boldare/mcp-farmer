{
  "name": "mcp-farmer",
  "description": "A CLI tool for scaffolding and analyzing MCP (Model Context Protocol) servers",
  "version": "1.3.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/boldare/mcp-farmer.git"
  },
  "homepage": "https://github.com/boldare/mcp-farmer#readme",
  "bugs": {
    "url": "https://github.com/boldare/mcp-farmer/issues"
  },
  "type": "module",
  "author": "Boldare",
  "license": "MIT",
  "bin": {
    "mcp-farmer": "./dist/cli.js"
  },
  "main": "./dist/cli.js",
  "types": "./dist/cli.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/src/new/templates/**/*",
    "!dist/**/*.test.*",
    "!dist/commitlint.config.*",
    "!dist/eslint.config.*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cli",
    "scaffold",
    "analysis",
    "developer-tools"
  ],
  "scripts": {
    "build": "tsc && cp -r src/new/templates dist/src/new/ && chmod +x dist/cli.js",
    "prepublishOnly": "bun run build",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "lint": "eslint .",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.4",
    "@types/node": "^25.0.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "dependencies": {
    "@agentclientprotocol/sdk": "^0.13.0",
    "@apidevtools/swagger-parser": "^12.1.0",
    "@inquirer/prompts": "^8.2.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@zed-industries/claude-code-acp": "^0.13.1",
    "chalk": "^5.6.2",
    "ora": "^9.0.0"
  }
}
